%table
  %tr
    %td
      = "#{agreement.name} #{agreement.version}"
  %tr
    %td
      = agreement.full
  %tr
    %td
      = form_tag(:controller => :agreements, :action => :agree, :name => agreement.name, :version => agreement.version) do
        = hidden_field_tag 'for_role_name', @role.name
        = submit_tag 'I agree'
