<div style="float:left; margin-right: 20px;">
	<h2>Sign in</h2>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div><%= f.label :login_or_email %><br />
	  <%= f.text_field :email %></div>

	  <div><%= f.label :password %>   
			<%= link_to "Forgot it?", new_password_path(resource_name) %><br />
	  <%= f.password_field :password %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>

	  <div><%= f.submit "Sign in" %></div>
	<% end %>
</div>

<div style="float:left; margin-right: 20px;">
	<h2>Sign up</h2>

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name),
	 						:validate => true) do |f| %>
	  <%= devise_error_messages! %>

		<table>
			<tr>
				<td><b><%= f.label :name %></b></td>
				<td><%= f.text_field :name %></td>
			</tr>
			<tr>
				<td><b><%= f.label :login %></b></td>
				<td><%= f.text_field :login %></td>
			</tr>
			<tr>
				<td><b><%= f.label :email %></b></td>
				<td><%= f.email_field :email %></td>
			</tr>
			<tr>
				<td><b><%= f.label :password %></b></td>
				<td><%= f.password_field :password %></td>
			</tr>
			<tr>
				<td><b><%= f.label :password_confirmation, "… again:" %></b></td>
				<td><%= f.password_field :password_confirmation %></td>
			</tr>
			<tr>
				<td/>
				<td><%= f.submit "Sign up" %></td>
			</tr>
		</table>
	<% end %>
	
</div>

<% if false 
	# TODO: ensure this in flash
%> 
	<%= link_to "Resend email confirmation?", new_confirmation_path(resource_name) %>
<% end %>

<div style="float:left">
	<h2>… or sign in with:</h2>

	<%= render :partial => "identities/links" %>
</div>