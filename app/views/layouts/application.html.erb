<html xmlns:fb="http://www.facebook.com/2008/fbml">
	<head>
		<meta http-equiv="Content-Type" Content="text/html;charset=UTF-8">
		<%= stylesheet_link_tag :all %>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
		<link rel="shortcut icon" href="favicon.ico">
		<meta name="title" content="Make Your Laws" />
		<meta name="robots" content="all" />
		<title>Make Your Laws</title>
	</head>
	<body>
		<div id="doc" class="yui-t4">
			<!-- <div id="header" role="banner">
			</div> -->
			<div id="bd"><!--body-->
				<div id="yui-main"> 
					<div class="yui-b" id="content"  role="main"><!--primary-->
						<%= yield %>		
					</div><!-- primary -->
				</div><!-- main -->
				
				<div class="yui-b"><!--secondary-->
					<h1>Make Your Laws</h1>
					<bq>This is what democracy looks like.</bq>
					<ul>
						<% %w(main introduction principles strategy contact).each do |p| %>
							<li><%= link_to_unless_current p.capitalize, url_for(:action => p, :controller => 'main') %></li>
						<% end %>
					</ul>
					<%= render :partial => 'layouts/google_analytics' %>
					<%= render :partial => 'layouts/addthis' %>
				</div><!-- secondary -->
			</div><!-- bd -->
		</div><!--doc -->
	</body>
</html>